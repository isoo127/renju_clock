<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E6486A3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="appinventor.ai_rdrniel12345.renju_clock.SettingActivity">

    <LinearLayout
        android:id="@+id/mark_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Mark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/koa_icon"
            android:onClick="markClicked" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/selectMode_L"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mode_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="모드"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/selectMode"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/mode_spinner"
            android:gravity="center"
            android:theme="@style/numberPickerText"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/gline1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="#898888" />

    <LinearLayout
        android:id="@+id/timeSet_L"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.6"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/player1_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player1_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="대국자1"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/hour_picker1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

            <TextView
                android:id="@+id/colon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/min_picker1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

            <TextView
                android:id="@+id/colon2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/sec_picker1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player2_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="대국자2"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/hour_picker2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

            <TextView
                android:id="@+id/colon3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/min_picker2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

            <TextView
                android:id="@+id/colon4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text=":"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/sec_picker2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/gline2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="#898888" />

    <LinearLayout
        android:id="@+id/mode_L"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/countdown_L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="초읽기"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/countdown_time"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

            <TextView
                android:id="@+id/countdown_text_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="회"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/countdown_sec"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

            <TextView
                android:id="@+id/countdown_text_sec"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="초"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fischer_L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fischer_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="피셔"
                android:textColor="#000000"
                android:textSize="16dp" />

            <NumberPicker
                android:id="@+id/fischer_sec"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:theme="@style/numberPickerText"/>

            <TextView
                android:id="@+id/fischer_text_sec"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="초"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_L"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/applyButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:text="적용"
            android:textColor="#000000"
            android:textSize="16dp"
            app:backgroundTint="#D7D7DC" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="16dp"
            app:backgroundTint="#D7D7DC" />
    </LinearLayout>
</LinearLayout>